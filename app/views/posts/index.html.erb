<% provide(:title, 'Posts Index') %>

<h1>All Posts</h1>
<ul>
<% @posts.each do |post| %>
  <li>
    <a href="<%= post_path(post) %>"><%= post.title %></a>
    , written by: <%= @authors["#{post.id}"] %>
    <% if post.user_id == cookies.encrypted[:user_id] %>
      <br>
      <a href="<%= edit_post_path(post) %>">Edit</a>
      <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
      <br>
      <br>
    <% end %>
  </li>
<% end %> 
</ul>
